{% if button %}
  <button {{"id="+button.id if button.id}} {{"type="+button.type if button.type}}>

    {% if button.icon %}
      {% set icon = button.icon %}
      {% include "partials/icon.njk" %}      
    {% endif %}

    {% if button.name %}
      <span>{{button.name}}</span>
    {% endif %}
  </button>
{% endif %}